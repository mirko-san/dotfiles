[user]
  email = 41379069+mirko-san@users.noreply.github.com
  name = mirko-san

[log]
  date = iso

[core]
  editor = vim

[init]
  defaultBranch = main

[alias]
  push-f = push --force-with-lease
  show-tag = describe --tag --abbrev=0
  version-tags = "tag -l --sort=-v:refname"
  delete-merged-branch = "!f () { git checkout $1; git branch --merged|egrep -v '\\*|develop|main'|xargs git branch -d; };f"

[include]
  path = ~/.gitconfig.work

[push]
  default = nothing
